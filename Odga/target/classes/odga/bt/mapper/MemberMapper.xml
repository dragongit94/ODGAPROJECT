<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="odga.bt.mapper.MemberMapper">
	
	<!-- 회원가입  -->
	<insert id="joinS" parameterType="Member">
		
			insert into MEMBER
			values (MEMBER_ID.nextval,
					#{m_email},
					#{m_pwd},
					#{m_name},
					#{m_phone},
					#{m_gender},
					#{m_birth},
					SYSDATE,
					null,
					null,
					null,
					null
					)
		
			</insert>
	
	<!-- 이메일중복확인  -->		
	<select id="checkId" parameterType="Member" resultType="int">
	
		    select count(*)
		    FROM MEMBER WHERE M_EMAIL=#{m_email}
		    
			</select>

	<!-- 로그인  -->
	<select id="loginS" parameterType="String" resultType="Member">
	
			select * 
			FROM MEMBER WHERE M_EMAIL=#{m_email}
			
	</select>
	
	<!-- 회원 정보 수정 -->
	<update id="updateS" parameterType="Member">
		update member set m_name=#{m_name}, M_PWD=#{m_pwd}, M_PHONE=#{m_phone}, M_BIRTH=#{m_birth}, m_fname=#{m_fname}, m_ofname=#{m_ofname}, m_filesize=#{m_filesize} where  M_EMAIL=#{m_email}
	</update>
	<update id="updateNofile" parameterType="Member">
		update member set m_name=#{m_name}, M_PWD=#{m_pwd}, M_PHONE=#{m_phone}, M_BIRTH=#{m_birth} where  M_EMAIL=#{m_email}
	</update>
	
	<!-- 회원 탈퇴 -->
	<delete id="leaveS" parameterType="Member">	
		delete from MEMBER where M_EMAIL=#{m_email} and M_PWD=#{m_pwd}		
	</delete>
	
	
	<!-- 이메일 인증값 저장 -->
	<insert id="emailAuthIns" parameterType="Member" >
	
		insert into EMAIL_CHK
		values ( #{m_email},
		         #{Authkey} )
	
	</insert>
	
	<!-- 이메일 인증값 대조 -->
	<select id="emailAuthChk" parameterType="Member" resultType="java.lang.String">
	
	select m_email
	FROM EMAIL_CHK WHERE Authkey=#{Authkey}
			
	</select>

	
	<!-- 이메일 인증값 삭제 -->
	<delete id="emailAuthDel" parameterType="Member">
		
	delete
	FROM EMAIL_CHK WHERE Authkey=#{Authkey}
		
	</delete>	
	
	<!-- 마이페이지 나의 일정 가져오기 -->	
	<select id="myPlanner" parameterType="long" resultType="Planner">
	select * from PLANER where m_id= #{m_id}
	</select>
	
	<!-- 마이페이지 나의 일정 디테일 정보 -->	
	<select id="thisPlaner" parameterType="long" resultType="Planner">
	select * from PLANER where p_id= #{p_id}
	</select>
	
	<select id="planDetail" parameterType="long" resultType="S_Planner">
	select * from S_PLANER where p_id= #{p_id}
	</select>
	
	<select id="detailItem" parameterType="String" resultType="Touritems">
	select * from TOURITEMS where CONTENTID= #{contentid}
	</select>
	
	<!-- FIND ID/PWD  -->
	<select id="findId" parameterType="Member" resultType="String">
		select M_EMAIL from member where m_name=#{m_name} and m_phone=#{m_phone}
	</select>
	<select id="findPwd" parameterType="Member">
		update MEMBER set M_PWD=#{m_pwd} where M_EMAIL=#{m_email}
	</select>
</mapper>